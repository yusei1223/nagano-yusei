<!DOCTYPE html>
<html>
  <head>
    <title>Nagano</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <% if flash[:notice] %>
       <h3 class="flash-green"><%= flash[:notice] %></h3>
　　<% end %>
　　<% if flash[:alert] %>
       <h3 class="flash-red"><%= flash[:alert] %></h3>
　　<% end %>

    <%= yield %>
  </body>
</html>
