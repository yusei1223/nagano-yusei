<div class="container m-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-1"></div>
    <h4 class="my-4"><span style="background-color:#EFEFEF">　<%= @customer.last_name %><%= @customer.first_name %><%= @customer.first_name %>さんの会員詳細　</span></h4>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-1"></div>
    <%= form_for @customer, :url => {action:"update"} do |f| %>
    <table class="table table-borderless">
    <%= flash[:error] %>
      <thead>
        <tr>
          <th style="width:20%">会員ID</th>
          <th style="width:20%"><%= @customer.id %></th>
          <th style="width:65%"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
         <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :kana_last_name %></td>
          <td><%= f.text_field :kana_first_name %></td>
        </tr>
            <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :post_code %></td>
          <td></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
          <td></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
        </tr>
          <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :member_state, '会員ステータス' %></td>
          <td><%= f.radio_button :member_state, :true %>有効
              <%= f.radio_button :member_state, :false %>退会
          </td>
          <td></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
          <td></td>
        </tr>
  </tbody>
</table>
 <% end %>

