<!--admin-customers-index 顧客一覧画面を表示するため -->
<div class="container m-5">
  <div class="row">
    <div class="col-2"></div>
    <h4 class="my-4 col-2"><span style="background-color:#EFEFEF">　会員一覧　</span></h4>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <table class="table col-10 mx-auto">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%=  customer.id %></td>
          <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
            <% if customer.member_state %>
              <td  class="text-success">有効</td>
            <% else %>
              <td>退会</td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @customers %>
