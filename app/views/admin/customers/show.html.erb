<div class="container m-5">
  <div class="row">
    <div class="col-1"></div>
      <h4 class="my-4"><span style="background-color:#EFEFEF">　<%= @customer.last_name + @customer.first_name %>さんの会員詳細　</span></h4>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td style="width:20%">会員ID</td>
          <td style="width:20%"><%= @customer.id %></td>
          <td style="width:65%"></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name +  @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.kana_last_name + @customer.kana_first_name %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td colspan="2"><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <% if @customer.member_state %>
            <td class="text-success">有効</td>
          <% else %>
            <td>退会</td>
          <% end %>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %></td>
          <td><div class="text-left"><%= link_to "注文履歴一覧を見る", admin_orders_path(@customer.id), class: "btn btn-primary" %></div></td>
        </tr>
      </tbody>
    </table>
</div>



