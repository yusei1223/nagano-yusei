<div class="container m-5">
  <div class="row">
    <div class="col-1"></div>
      <h4 class="my-4"><span style="background-color:#EFEFEF">　ジャンル編集　</span></h4>
  </div>
    <%= render 'layouts/errors', obj: @genre %>
    <div class="row">
      <teble class="table table-borderless mb-5">
        <%= form_for @genre, :url => {action:"update"} do |f| %>
       <tr>
          <td class="pr-3">ジャンル名</td>
          <td class="pr-3"><%= f.text_field :name %></td>
          <td class="pr-3"><%= f.submit '変更を保存', class: 'btn btn-success' %></td>
          <% end %>
        </tr>
      </teble>
    </div>
  </div>
</div>
