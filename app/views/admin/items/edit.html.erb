<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>商品編集</h1>
    <%= render 'layouts/errors', obj: @item %>
    <%= form_for @item, :url => {action:"update"} do |f| %>
      <h4>商品画像</h4>
      <%= f.attachment_field :image %>
      <h4>商品名</h4>
      <%= f.text_field :title %>
      <h4>商品説明</h4>
      <%= f.text_area :body %>
      <h4>ジャンル</h4>
      <%= f.collection_select :genre_id, Genre.all, :id, :name %>
      <h4>税抜価格</h4>
      <%= f.text_field :non_tax_price %>円
      <h4><%= f.label :sale_state, '販売ステータス' %></h4>
          <%= f.radio_button :sale_state ,true %>販売中
          <%= f.radio_button :sale_state, false %>販売停止中
      <br>
      <%= f.submit '変更を保存', class: 'btn btn-success' %>
    <% end %>
    </div>
  </div>
</div>