<div class="container m-5">
  <div class="row">
    <div class="col-2"></div>
    <h4 class="my-4"><span style="background-color:#EFEFEF">　商品新規登録　</span></h4>
  </div>
  <%= render 'layouts/errors', obj: @item %>
  <div class="row">
    <div class="mx-auto">
      <%= form_for @item, :url => {action:"create"} do |f| %>
      <table class="terbl">
        <tbody>
          <tr>
            <td class="py-2">商品画像</td>
            <td class="py-2"><%= f.attachment_field :image %></td>
          </tr>
          <tr>
            <td class="py-2">商品名</td>
            <td class="py-2"><%= f.text_field :title %></td>
          </tr>
          <tr>
            <td class="py-2">商品説明</td>
            <td class="py-2"><%= f.text_area :body %></td>
          </tr>
          <tr>
            <td class="py-2">ジャンル</td>
            <td class="py-2"><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択してください --" %></td>
          </tr>
          <tr>
            <td class="py-2">税抜価格</td>
            <td class="py-2"><%= f.text_field :non_tax_price, placeholder:"1000" %>円</td>
          </tr>
          <tr>
            <td class="pr-3"><%= f.label :sale_state, '販売ステータス' %></td>
            <td class="py-2"><%= f.radio_button :sale_state ,true %>販売中
                <%= f.radio_button :sale_state, false %>販売停止中</td>
          </tr>
          <tr>
            <td colspan="2" class="text-center"><%= f.submit '新規登録', class: 'btn btn-success' %></td>
          </tr>
        </tbody>
    </terbl>
     <% end %>
    </div>
    </div>
  </div>
</div>
